<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="after.body.start">
            <block class="Magento\Framework\View\Element\Template" name="consent_popup"
                   template="Flurrybox_EnhancedPrivacyPro::consent-popup.phtml" after="-">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="customer-consents-popup" xsi:type="array">
                                <item name="component"
                                      xsi:type="string">Flurrybox_EnhancedPrivacyPro/js/view/consent-popup</item>
                                <item name="template"
                                      xsi:type="string">Flurrybox_EnhancedPrivacyPro/consent-popup</item>
                                <item name="displayArea" xsi:type="string">customer-consents-popup</item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
